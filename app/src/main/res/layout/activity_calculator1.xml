<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app">

    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Front_ColorGrey"
        android:textColor="@color/material_white"
        android:text="@string/calculator"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textSize="35dp"
        android:gravity="center|center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:elevation="20dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_background"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline30Percent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title">

        <TextView
            android:id="@+id/expression"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:autoSizeTextType="uniform"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            android:textSize="35sp">

        </TextView>

        <TextView
            android:id="@+id/tResult"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:autoSizeTextType="uniform"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="#FFDD00"
            android:textSize="45sp">

        </TextView>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline30Percent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline30Percent"
        android:padding="15dp">

        <Button
            android:id="@+id/numberOpenParenthesis"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#FFDD00"
            android:layout_marginRight="2dp"
            android:text="("
            android:textSize="35dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/color_text_calculsator_dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/numberCloseParenthesis"
            app:layout_constraintLeft_toLeftOf="@+id/numberAllClear"
            app:layout_constraintBottom_toTopOf="@id/numberAllClear">

        </Button>

        <Button
            android:id="@+id/numberCloseParenthesis"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:backgroundTint="#FFDD00"
            android:text=")"
            android:textSize="35dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/color_text_calculsator_dark"
            app:layout_constraintBottom_toTopOf="@+id/numberAllClear"
            app:layout_constraintLeft_toRightOf="@id/numberOpenParenthesis"
            app:layout_constraintRight_toRightOf="@+id/numberAllClear"
            app:layout_constraintTop_toTopOf="parent">

        </Button>

        <Button
            android:id="@+id/historic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#FFDD00"
            android:text=""
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textColor="@color/color_text_calculsator_dark"
            app:layout_constraintBottom_toTopOf="@+id/numberDivide"
            app:layout_constraintEnd_toEndOf="@+id/numberDivide"
            app:layout_constraintHorizontal_weight="0.25"
            app:layout_constraintLeft_toRightOf="@id/numberCloseParenthesis"
            app:layout_constraintRight_toLeftOf="@id/numberPlusLess"
            app:layout_constraintStart_toStartOf="@+id/numberDivide"
            app:layout_constraintTop_toTopOf="parent">

        </Button>

        <Button
            android:id="@+id/numberPlusLess"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#FFDD00"
            android:text="+/-"
            android:textSize="35dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/color_text_calculsator_dark"
            app:layout_constraintBottom_toTopOf="@+id/numberMultiply"
            app:layout_constraintEnd_toEndOf="@+id/numberBackSpace"
            app:layout_constraintHorizontal_weight="0.50"
            app:layout_constraintLeft_toRightOf="@id/historic"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/numberMultiply"
            app:layout_constraintTop_toTopOf="parent">

        </Button>

        <Button
            android:id="@+id/numberAllClear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#231f20"
            android:text="AC"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/yellow_mainColor"
            app:layout_constraintHorizontal_weight="0.25"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/numberDivide"
            app:layout_constraintTop_toBottomOf="@id/numberOpenParenthesis"
            app:layout_constraintBottom_toTopOf="@id/number7">

        </Button>

        <Button
            android:id="@+id/numberDivide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="/"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/yellow_mainColor"
            app:layout_constraintHorizontal_weight="0.25"
            app:layout_constraintLeft_toRightOf="@id/numberAllClear"
            app:layout_constraintRight_toLeftOf="@id/numberMultiply"
            app:layout_constraintTop_toBottomOf="@id/numberCloseParenthesis"
            app:layout_constraintBottom_toTopOf="@id/number8"
            android:backgroundTint="#231f20"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">

        </Button>

        <Button
            android:id="@+id/numberMultiply"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="X"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/yellow_mainColor"
            app:layout_constraintHorizontal_weight="0.25"
            android:backgroundTint="#231f20"
            app:layout_constraintLeft_toRightOf="@id/numberDivide"
            app:layout_constraintRight_toLeftOf="@id/numberBackSpace"
            app:layout_constraintTop_toBottomOf="@id/historic"
            app:layout_constraintBottom_toTopOf="@id/number9"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">

        </Button>

        <Button
            android:id="@+id/numberBackSpace"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#231f20"
            app:layout_constraintHorizontal_weight="0.25"
            android:text=""
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/numberPlusLess"
            app:layout_constraintLeft_toRightOf="@id/numberMultiply"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/numberLess"
            android:layout_marginLeft="5dp">

        </Button>

        <Button
            android:id="@+id/number7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#231f20"
            android:text="7"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/material_white"
            app:layout_constraintHorizontal_weight="0.25"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/number8"
            app:layout_constraintTop_toBottomOf="@id/numberAllClear"
            app:layout_constraintBottom_toTopOf="@id/number4">

        </Button>

        <Button
            android:id="@+id/number8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="8"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/material_white"
            app:layout_constraintHorizontal_weight="0.25"
            app:layout_constraintLeft_toRightOf="@id/number7"
            app:layout_constraintRight_toLeftOf="@id/number9"
            app:layout_constraintTop_toBottomOf="@id/numberDivide"
            app:layout_constraintBottom_toTopOf="@id/number5"
            android:backgroundTint="#231f20"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">

        </Button>

        <Button
            android:id="@+id/number9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="9"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/material_white"
            app:layout_constraintHorizontal_weight="0.25"
            android:backgroundTint="#231f20"
            app:layout_constraintLeft_toRightOf="@id/number8"
            app:layout_constraintRight_toLeftOf="@id/numberLess"
            app:layout_constraintTop_toBottomOf="@id/numberMultiply"
            app:layout_constraintBottom_toTopOf="@id/number6"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">

        </Button>

        <Button
            android:id="@+id/numberLess"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#231f20"
            app:layout_constraintHorizontal_weight="0.25"
            android:text="-"
            android:textSize="40dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/yellow_mainColor"
            app:layout_constraintTop_toBottomOf="@id/numberBackSpace"
            app:layout_constraintLeft_toRightOf="@id/number9"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/numberPlus"
            android:layout_marginLeft="5dp">

        </Button>

        <Button
            android:id="@+id/number4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#231f20"
            android:text="4"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/material_white"
            app:layout_constraintHorizontal_weight="0.25"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/number5"
            app:layout_constraintTop_toBottomOf="@id/number7"
            app:layout_constraintBottom_toTopOf="@id/number1">

        </Button>

        <Button
            android:id="@+id/number5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="5"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/material_white"
            app:layout_constraintHorizontal_weight="0.25"
            app:layout_constraintLeft_toRightOf="@id/number4"
            app:layout_constraintRight_toLeftOf="@id/number6"
            app:layout_constraintTop_toBottomOf="@id/number8"
            app:layout_constraintBottom_toTopOf="@id/number2"
            android:backgroundTint="#231f20"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">

        </Button>

        <Button
            android:id="@+id/number6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="6"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/material_white"
            app:layout_constraintHorizontal_weight="0.25"
            android:backgroundTint="#231f20"
            app:layout_constraintLeft_toRightOf="@id/number5"
            app:layout_constraintRight_toLeftOf="@id/numberPlus"
            app:layout_constraintTop_toBottomOf="@id/number9"
            app:layout_constraintBottom_toTopOf="@id/number3"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">

        </Button>

        <Button
            android:id="@+id/numberPlus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#231f20"
            android:text="+"
            android:textSize="40dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/yellow_mainColor"
            app:layout_constraintBottom_toBottomOf="@+id/number6"
            app:layout_constraintHorizontal_weight="0.25"
            app:layout_constraintLeft_toRightOf="@id/number6"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/numberLess">

        </Button>

        <Button
            android:id="@+id/number1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#231f20"
            android:text="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/material_white"
            app:layout_constraintHorizontal_weight="0.25"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/number2"
            app:layout_constraintTop_toBottomOf="@id/number4"
            app:layout_constraintBottom_toTopOf="@id/numberPercentage">

        </Button>

        <Button
            android:id="@+id/number2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="2"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/material_white"
            app:layout_constraintHorizontal_weight="0.25"
            app:layout_constraintLeft_toRightOf="@id/number1"
            app:layout_constraintRight_toLeftOf="@id/number3"
            app:layout_constraintTop_toBottomOf="@id/number5"
            android:backgroundTint="#231f20"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toTopOf="@id/number0">

        </Button>

        <Button
            android:id="@+id/number3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="3"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/material_white"
            app:layout_constraintHorizontal_weight="0.25"
            android:backgroundTint="#231f20"
            app:layout_constraintLeft_toRightOf="@id/number2"
            app:layout_constraintRight_toLeftOf="@id/numberResult"
            app:layout_constraintTop_toBottomOf="@id/number6"
            app:layout_constraintBottom_toTopOf="@id/numberPoint"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">

        </Button>

        <Button
            android:id="@+id/numberResult"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#231f20"
            android:text="="
            android:textSize="40dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/yellow_mainColor"
            app:layout_constraintBottom_toBottomOf="@+id/numberPoint"
            app:layout_constraintHorizontal_weight="0.25"
            app:layout_constraintLeft_toRightOf="@id/number3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/numberPlus">

        </Button>

        <Button
            android:id="@+id/numberPercentage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#231f20"
            android:text="%"
            android:textColor="@color/yellow_mainColor"
            android:textSize="40dp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="0.25"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/number0"
            app:layout_constraintTop_toBottomOf="@id/number1">

        </Button>

        <Button
            android:id="@+id/number0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#231f20"
            android:text="0"
            android:textColor="@color/material_white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="0.25"
            app:layout_constraintLeft_toRightOf="@id/numberPercentage"
            app:layout_constraintRight_toLeftOf="@id/numberPoint"
            app:layout_constraintTop_toBottomOf="@id/number2">

        </Button>

        <Button
            android:id="@+id/numberPoint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#231f20"
            android:text="."
            android:textColor="@color/yellow_mainColor"
            android:textSize="40dp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="0.25"
            app:layout_constraintLeft_toRightOf="@id/number0"
            app:layout_constraintRight_toLeftOf="@id/numberResult"
            app:layout_constraintTop_toBottomOf="@id/number3">

        </Button>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>