                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        tools:ignore="MissingConstraints">

                        <include
                            android:id="@+id/rgbblock"
                            layout="@layout/rgb_block"
                            tools:ignore="IncludeLayoutParam">

                        </include>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toTopOf="@id/SaveField"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/RGBSection">

                        <LinearLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toTopOf="@id/SaveField"
                            app:layout_constraintTop_toBottomOf="@id/RGBSection"
                            tools:ignore="MissingConstraints"
                            tools:layout_editor_absoluteX="2dp"
                            android:elevation="5dp">

                            <include
                                android:id="@+id/section_layout"
                                layout="@layout/sc_complementary_color"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:elevation="15dp">

                            </include>

                            <include
                                android:id="@+id/block2"
                                layout="@layout/sc_split_complementary_color"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:elevation="15dp">

                            </include>

                            <include
                                android:id="@+id/block3"
                                layout="@layout/sc_analogous_colors"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:elevation="15dp">

                            </include>

                            <include
                                android:id="@+id/block4"
                                layout="@layout/sc_triadic_color"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:elevation="15dp">

                            </include>

                            <include
                                android:id="@+id/block5"
                                layout="@layout/sc_tetradic_color"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:elevation="15dp">

                            </include>

                        </LinearLayout>

