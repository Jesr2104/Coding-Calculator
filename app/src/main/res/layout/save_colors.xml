<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#454545">

    <Button
        android:id="@+id/buttonSaves"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:text="Saves"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/buttonColor1"
        android:elevation="5dp"
        android:backgroundTint="#505050">

    </Button>

    <Button
        android:id="@+id/buttonColor1"
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:backgroundTint="#AB00C3"
        android:elevation="5dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@id/buttonSaves"
        app:layout_constraintRight_toLeftOf="@id/buttonColor2"
        app:layout_constraintTop_toTopOf="parent">

    </Button>

    <Button
        android:id="@+id/buttonColor2"
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:backgroundTint="#66FF6E"
        android:elevation="5dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@id/buttonColor1"
        app:layout_constraintRight_toLeftOf="@id/buttonColor3"
        app:layout_constraintTop_toTopOf="parent">

    </Button>

    <Button
        android:id="@+id/buttonColor3"
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:backgroundTint="#65AAFF"
        android:elevation="5dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@id/buttonColor2"
        app:layout_constraintRight_toLeftOf="@id/buttonColor4"
        app:layout_constraintTop_toTopOf="parent">

    </Button>

    <ImageButton
        android:id="@+id/buttonColor4"
        android:layout_width="35dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/buttonColor3"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/icon_plus"
        android:scaleType="center"
        android:adjustViewBounds="true"
        android:elevation="10dp"
        android:background="#00FFFFFF"
        android:layout_marginRight="5dp">

    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>